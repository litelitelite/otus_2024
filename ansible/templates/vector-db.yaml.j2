sources:
  db_logs:
    type: file
    include: ["/var/log/postgresql/*.log"]

sinks:
  kafka_sink:
    type: kafka
    inputs: ["db_logs"]
    brokers:
      - "https://10.0.1.7:9200"
    topic: "db_logs_topic"

sinks:
  elasticsearch:
    type: elasticsearch
    inputs: ["db_logs"]
    endpoints:
      - "https://10.0.1.10:9200"
    bulk:
      index: "db-logs-%Y.%m.%d"
    tls:
      verify_certificate: false
    auth:
      strategy: "basic"
      user: "admin"
      password: "qwerty123"